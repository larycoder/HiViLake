<?xml version="1.0" encoding="UTF-8"?>

<files>
    <roots>
    <!-- Set root of Feeder-->
        <root>
            <name>input</name>
            <value>./</value>
        </root>
        <root>
            <name>output</name>
            <value>./</value>
        </root>
    </roots>
    
    <paths>
    <!--
        Configure schema for input file
        each path (now) has 3 value:
        - input
        - output
        - type: file / dir / both
    -->
        <path>
            <input>./.*</input>
            <output>./</output>
            <type>file</type>
        </path>
        <path>
            <input>./test_path/.*</input>
            <output>./</output>
            <type>dir</type>
        </path>
        <path>
            <input>hi</input>
            <output>ok</output>
        </path>
    </paths>
</files>
